<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Activitys.SplashScreen">


    <ImageView
        android:layout_width="match_parent"
        android:rotation="25"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp"
        android:layout_height="400dp"
        android:src="@drawable/hexa_toplu"
        android:alpha="0.1"
        />

    <ImageView
        android:layout_width="match_parent"
        android:rotation="256"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_height="400dp"
        android:src="@drawable/hexa_toplu"
        android:alpha="0.1"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0.1"
        android:rotation="52"
        android:src="@drawable/hexa_toplu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hexa3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="220dp"
        android:alpha="0.7"
        android:rotation="12"
        android:src="@drawable/hexagon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hexa5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="400dp"
        android:alpha="0.2"
        android:rotation="58"
        android:src="@drawable/hexagon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hexa4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:alpha="0.8"
        android:rotation="15"
        android:src="@drawable/hexagon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/hexa2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="250dp"
        android:alpha="0.5"
        android:rotation="7"
        android:src="@drawable/hexagon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/hexa1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginRight="210dp"
        android:layout_marginBottom="470dp"
        android:rotation="-5"
        android:src="@drawable/hexagon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView">


        <ImageView
            android:id="@+id/triangle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="40dp"
            android:rotation="7"
            android:src="@drawable/triangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squirk"
            android:shadowColor="#989797"
            android:shadowDx="4"
            android:shadowDy="8"
            android:shadowRadius="10"
            android:text="Kelime\noyunu"
            android:textAlignment="center"
            android:textColor="#8E2FFA"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/no_internet"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/no_internet" />

        <Button
            android:id="@+id/yenidenDene"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#B301FF"
            android:fontFamily="@font/klavika"
            android:shadowColor="#2D1473"
            android:shadowDx="10"
            android:shadowDy="10"
            android:textSize="13sp"
            android:shadowRadius="10"
            android:text="yeniden dene"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/no_internet" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/klavika"
            android:textSize="12sp"
            android:text="internet bağlantısı saptanamadı"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/yenidenDene"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>